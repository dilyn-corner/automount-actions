#!/bin/sh

# This file will exist at runtime
# shellcheck disable=1091
. "$SNAP/usr/bin/common"

wait_for_fifo() {
    [ ! -p "$WATCH_FILE" ] || return 0

    inotifywait --quiet --csv --event create "$(dirname "$WATCH_FILE")" | \
        while IFS=, read -r _dir _ _name; do
            [ "${_dir}/${_name}" != "$WATCH_FILE" ] || return 0
        done
}

watch_devices() {
    inotifywait --quiet --monitor --event "moved_to" --event "delete" /dev/disk/by-uuid | \
        while read -r _parent _action _uuid; do
            case "$_action" in
                MOVED_TO) try_mount "$_parent" "$_uuid" ;;
                DELETE)   rm -r "${_mount_dir:?}/${_uuid}" || true ;;
                *) : ;;
            esac
        done
}

try_mount() {
    _parent="${1%/}"
    _uuid="$2"

    _source="${_parent}/${_uuid}"
    _target="${_mount_dir}/${_uuid}"

    log "$SNAP_NAME.auto-mount found: ${_source}"

    mkdir -p "$_target"
    if ! mount -o rw,sync -t "${FSTYPE:-vfat}" "$_source" "$_target" >/dev/null 2>&1; then
        log "WARN: Could not mount ${_source} to ${_target}"
        rm -rf "$_target"
        return 0
    fi

    wait_for_fifo
    echo "$_target" >> "$WATCH_FILE"
}

cleanup () {
    sync

    _uuids="$(ls -1 "$_mount_dir" | tr '\n' :)"

    if [ -n "$_uuids" ]; then
        # Unmount everthing
        IFS=:
        for _uuid in $_uuids; do
            umount "${_mount_dir}/${_uuid}" || continue

            rmdir "${_mount_dir}/${_uuid}"

            # FIXME: See the note in auto-install's eject_device()
            # eject "/dev/disk/by-uuid/${_uuid}" || true
        done
    fi

    rmdir "$_mount_dir"

    exit
}

main() {
    set -eu

    _log_file="$(mklog "${SNAP_COMMON}/logs")"; readonly _log_file
    _mount_dir="${MOUNT_DIR:-"$(mktemp -d)"}";  readonly _mount_dir

    trap cleanup EXIT INT TERM

    watch_devices
}

[ -n "$NOEXEC" ] || main
