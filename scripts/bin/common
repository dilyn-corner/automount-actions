#!/bin/sh

: ${WATCH_FILE:=/tmp/mounts.fifo}; readonly WATCH_FILE

mklog() {
    _log_dir="${1:-"${LOG_DIR:="$(mktemp -d)"}"}"

    [ -d "$_log_dir" ] || mkdir -p "$_log_dir"

    echo "${_log_dir}/$(date -Iseconds).log"
}

# log to SNAP_COMMON and TTY
log() {
    printf '%s %s\n' \
        "$(date -Iseconds)" "$*" | tee -a "${_log_file}" >&2
}
